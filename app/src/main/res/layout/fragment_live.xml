<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eeeeee"
        android:orientation="vertical">

        <com.flyco.tablayout.SlidingTabLayout
            android:id="@+id/live_sliding_tab"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#ff7800"
            tl:tl_iconVisible="false"
            tl:tl_indicator_color="#ffffff"
            tl:tl_textSelectColor="#ffffff"
            tl:tl_indicator_corner_radius="3dp"
            tl:tl_indicator_height="1dp"
            tl:tl_indicator_style="NORMAL"
            tl:tl_indicator_width_equal_title="true"
            tl:tl_textsize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#34707070" />

        <android.support.v4.view.ViewPager
            android:id="@+id/live_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </com.zhy.autolayout.AutoLinearLayout>
</RelativeLayout>
